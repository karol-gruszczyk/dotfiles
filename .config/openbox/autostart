# launching tint2 with transparency enabled
if which tint2 > /dev/null 2>&1; then
  (sleep 1 && xcompmgr) &
  (sleep 1 && tint2) &
fi

autorandr --change

# desktop wallpaper, different wallpaper for each session
feh --bg-scale $(find ~/wallpapers -type f |sort -R |tail -1) &

# applets
nm-applet &
volumeicon &
xfce4-power-manager &
conky &


# other programs
dropbox &
